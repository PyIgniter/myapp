//Jenkins file only to tutorial example
pipeline {
  agent any
  environment {
    CI = 'true' 
  }
  tools {nodejs "node"}
    
  stages {
        
    stage('Cloning Git') {
      steps {
        git 'https://github.com/PyIgniter/myapp.git'
      }
    }
        
    stage('Install dependencies') {
      steps {
        sh 'npm install express --save'
      }
    }
     
    stage('Build') {
      steps {
          sh 'npm install --production'
      }
    }
    stage('Deploy') { 
     steps {
          sh './script/deploy.sh' 
      }
    }        
  }
}
